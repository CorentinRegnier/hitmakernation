{% extends "app/form.html.twig" %}

{% block page_title %}{{ 'app.user.resetting.title'|trans }}{% endblock %}

{% block content %}
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST">
        <div class="form-group">
            <label for="username" class="control-label required">
                {{ 'app.user.resetting.request.username'|trans }}
            </label>
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>

                <input type="text" id="username" name="username" class="form-control"
                       required="required"/>
            </div>
        </div>
        <div class="text-center">
            <input type="submit" class="btn btn-success" value="{{ 'app.user.resetting.request.submit'|trans }}"/>
        </div>
    </form>
{% endblock content %}